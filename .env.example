# CampusGPT Environment Configuration

# Basic Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=./models/campusgpt-v1
BASE_MODEL=meta-llama/Llama-2-7b-chat-hf
DEVICE=cuda
TORCH_DTYPE=float16
LOAD_IN_8BIT=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["*"]

# Generation Parameters
MAX_LENGTH=512
MAX_NEW_TOKENS=256
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
REPETITION_PENALTY=1.1

# Caching Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_MAX_SIZE=1000
CACHE_TTL=3600

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=campusgpt
POSTGRES_USER=campusgpt
POSTGRES_PASSWORD=campusgpt_password

# Training Configuration
TRAINING_DATA_DIR=./data/processed
TRAINING_OUTPUT_DIR=./models/training-output
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=4
LEARNING_RATE=2e-4
NUM_EPOCHS=3

# LoRA Configuration
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.1

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=campusgpt_admin
ENABLE_METRICS=true

# External Services
HUGGINGFACE_TOKEN=your_huggingface_token_here
WANDB_PROJECT=campusgpt
WANDB_API_KEY=your_wandb_api_key_here

# Security
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=1048576  # 1MB
ALLOWED_IPS=[]  # empty means all IPs allowed

# Jupyter Configuration
JUPYTER_TOKEN=campusgpt_jupyter_token
JUPYTER_PORT=8888

# Docker Configuration
COMPOSE_PROJECT_NAME=campusgpt
COMPOSE_FILE=docker-compose.yml